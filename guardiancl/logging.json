{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "file": {
            "format": "%(asctime)s :: %(levelname)s :: %(name)s - %(message)s"
        }
    },

    "handlers": {
        "file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "file",
            "filename": "system.log",
            "maxBytes": 10485760,
            "backupCount": 3,
            "encoding": "utf8"
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["file_handler"]
    }

}